{
    "compilerOptions": {
        "allowJs": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./out",
        "preserveSymlinks": true,
        "pretty": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2021",
        "paths": {
            "@/*": ["./src/*"],
            "@components/*": ["src/components/*"],
            "@data/*": ["src/data/*"],
            "@models/*": ["src/models/*"],
            "@pages/*": ["src/pages/*"],
            "@styles/*": ["src/styles/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", ".next", "out", "dist", "*.d.ts"],
    "types": ["node", "react", "react-dom", "tailwindcss", "jest", "commitlint/types"]
}
